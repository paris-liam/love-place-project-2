---
layout: layouts/base.njk
section: post
---
<article class='post-body'>
  <div class='title-header'>
    <div class='text-title-header'>
      <h1>{{ title }}</h1>
      <h5>{{ subject }}</h5>
    </div>
    <img src="{{ image }}"/>
    <p class="hook-text">{{ hook | hookFilter }}</p>
    <p class="byline">{{byLine}}</p>
    <ul class='tag-list'>
      {% for tag in tags %}
      <li class='tag'><a href="/tags/{{tag}}">{{ tag }}</a></li>
      {% endfor %}
    </ul>
  </div>
  {{ layoutContent | safe }}
</article>

<nav>
  <a href="{{ '/' | url }}">‚Üê More Interviews</a>
</nav>

<script>
  let hook = document.querySelector('.hook-text');
  let span = document.createElement('span');
  let hookText = hook.innerHTML;
  hook.innerHTML = '';
  hook.innerHTML = hookText.replaceAll('&lt;', '<').replaceAll('&gt;', '>');
</script>