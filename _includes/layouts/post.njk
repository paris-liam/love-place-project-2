---
layout: layouts/base.njk
section: post
---

<article class='post-body'>
  <div class='title-header'>
    <div class='text-title-header'>
      <h1>{{ title }}</h1>
      <h5>{{ subject }}</h5>
    </div>
    <img src="{{ image }}"/>
  </div>
  {{ layoutContent | safe }}

  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>

</article>

<nav>
  <a href="{{ '/' | url }}">‚Üê More Interviews</a>
</nav>
