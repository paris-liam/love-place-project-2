---
layout: layouts/base.njk
section: post
---

<article class='post-body'>
  <img src="{{ headerImage }}"/>
  <h1>{{ title }}</h1>
  <h2>{{ subject }}</h2>
  {{ soundcloudLink | safe }}
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>

  {{ layoutContent | safe }}

</article>

<nav>
  <a href="{{ '/' | url }}">‚Üê More Interviews</a>
</nav>
