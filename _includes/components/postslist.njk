	<div class='tag-selection'>
		<h3>i'd like to read posts about:</h3>
		<select id="tagSelect">
			{% for tag in collections.postTags %}
				<option>{{tag}}</option>
			{% endfor %}
		</select>

	</div>
<section class='post-list'>
	{% for post in postslist | reverse %}
		<a href="{{ post.url | url }}"><div class='post-container' {% if post.url == url %} data-current="current item"{% endif %}>
			<img src="{{ post.data.image }}"/>
			<h4>{{post.data.title}}</h4>
			<p>{{post.data.subject}}</p>
		</div></a>
	{% endfor %}
</section>
<script>

	window.onload = () => {
		//check href for tags/blank and put into value
		document.querySelector('#tagSelect').value = "tag3"
	};
	document.querySelector('#tagSelect').addEventListener('change', (val) => {
		window.location.href = `/tags/${val.target.value}` 
	})
</script>